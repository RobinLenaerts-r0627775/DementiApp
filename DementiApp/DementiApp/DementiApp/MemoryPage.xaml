<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DementiApp.MemoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Memory Game" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="f0" StyleId="0" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="1" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f1" StyleId="1" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="1" Grid.Row="1"  Clicked="Button_Clicked"/>
                <Button x:Name="f2" StyleId="2" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="1" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button x:Name="f3" StyleId="3" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="1" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button x:Name="f4" StyleId="4" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="2" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f5" StyleId="5" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="2" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button x:Name="f6" StyleId="6" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="2" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button x:Name="f7" StyleId="7" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="2" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button x:Name="f8" StyleId="8" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="3" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f9" StyleId="9" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="3" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button x:Name="f10" StyleId="10" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="3" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button x:Name="f11" StyleId="11" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="3" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button x:Name="f12" StyleId="12" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="4" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f13" StyleId="13" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="4" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button x:Name="f14" StyleId="14" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="4" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button x:Name="f15" StyleId="15" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="4" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button x:Name="f16" StyleId="16" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="5" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f17" StyleId="17" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="5" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button x:Name="f18" StyleId="18" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="5" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button x:Name="f19" StyleId="19" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="5" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button x:Name="f20" StyleId="20" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="6" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button x:Name="f21" StyleId="21" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="6" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button x:Name="f22" StyleId="22" BackgroundColor="Black" BorderWidth="5"  BorderColor="Transparent" Grid.Column="6" Grid.Row="2" Clicked="Button_Clicked"/>
