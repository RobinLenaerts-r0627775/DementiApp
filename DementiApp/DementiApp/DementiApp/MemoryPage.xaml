<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DementiApp.MemoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Memory Game" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button StyleId="0" BackgroundColor="Black" Grid.Column="1" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="1" BackgroundColor="Black" Grid.Column="1" Grid.Row="1"  Clicked="Button_Clicked"/>
                <Button StyleId="2" BackgroundColor="Black" Grid.Column="1" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="3" BackgroundColor="Black" Grid.Column="1" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button StyleId="4" BackgroundColor="Black" Grid.Column="2" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="5" BackgroundColor="Black" Grid.Column="2" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button StyleId="6" BackgroundColor="Black" Grid.Column="2" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="7" BackgroundColor="Black" Grid.Column="2" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button StyleId="8" BackgroundColor="Black" Grid.Column="3" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="9" BackgroundColor="Black" Grid.Column="3" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button StyleId="10" BackgroundColor="Black" Grid.Column="3" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="11" BackgroundColor="Black" Grid.Column="3" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button StyleId="12" BackgroundColor="Black" Grid.Column="4" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="13" BackgroundColor="Black" Grid.Column="4" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button StyleId="14" BackgroundColor="Black" Grid.Column="4" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="15" BackgroundColor="Black" Grid.Column="4" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button StyleId="16" BackgroundColor="Black" Grid.Column="5" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="17" BackgroundColor="Black" Grid.Column="5" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button StyleId="18" BackgroundColor="Black" Grid.Column="5" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="19" BackgroundColor="Black" Grid.Column="5" Grid.Row="3" Clicked="Button_Clicked"/>
                <Button StyleId="20" BackgroundColor="Black" Grid.Column="6" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button StyleId="21" BackgroundColor="Black" Grid.Column="6" Grid.Row="1" Clicked="Button_Clicked"/>
                <Button StyleId="22" BackgroundColor="Black" Grid.Column="6" Grid.Row="2" Clicked="Button_Clicked"/>
                <Button StyleId="23" BackgroundColor="Black" Grid.Column="6" Grid.Row="3" Clicked="Button_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>