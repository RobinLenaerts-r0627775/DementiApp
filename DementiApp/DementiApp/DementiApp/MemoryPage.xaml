<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DementiApp.MemoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Memory Game" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button StyleId="first" BackgroundColor="Green" Grid.Column="1" Grid.Row="0" Clicked="Button_Clicked"/>
                <Button BackgroundColor="Blue" Grid.Column="1" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="1" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="1" Grid.Row="3"/>
                <Button BackgroundColor="Blue" Grid.Column="2" Grid.Row="0"/>
                <Button BackgroundColor="Blue" Grid.Column="2" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="2" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="2" Grid.Row="3"/>
                <Button BackgroundColor="Blue" Grid.Column="3" Grid.Row="0"/>
                <Button BackgroundColor="Blue" Grid.Column="3" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="3" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="3" Grid.Row="3"/>
                <Button BackgroundColor="Blue" Grid.Column="4" Grid.Row="0"/>
                <Button BackgroundColor="Blue" Grid.Column="4" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="4" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="4" Grid.Row="3"/>
                <Button BackgroundColor="Blue" Grid.Column="5" Grid.Row="0"/>
                <Button BackgroundColor="Blue" Grid.Column="5" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="5" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="5" Grid.Row="3"/>
                <Button BackgroundColor="Blue" Grid.Column="6" Grid.Row="0"/>
                <Button BackgroundColor="Blue" Grid.Column="6" Grid.Row="1"/>
                <Button BackgroundColor="Blue" Grid.Column="6" Grid.Row="2"/>
                <Button BackgroundColor="Blue" Grid.Column="6" Grid.Row="3"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>